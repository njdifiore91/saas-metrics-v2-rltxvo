{
  "name": "@startup-metrics/backend",
  "version": "1.0.0",
  "description": "Backend services for the Startup Metrics Benchmarking Platform",
  "private": true,
  "workspaces": [
    "src/admin-service",
    "src/auth-service",
    "src/metrics-service",
    "src/report-service",
    "src/api-gateway"
  ],
  "scripts": {
    "start": "node dist/app.js",
    "dev": "nodemon src/app.ts",
    "build": "tsc && npm run build:services",
    "build:services": "npm run build --workspaces",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate deploy",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down"
  },
  "dependencies": {
    "@nestjs/common": "^9.0.0",
    "@nestjs/throttler": "^4.0.0",
    "@opentelemetry/api": "1.4.0",
    "@prisma/client": "4.12.0",
    "aws-sdk": "2.1.0",
    "bcrypt": "5.1.0",
    "cache-manager": "^5.2.0",
    "class-validator": "0.14.0",
    "compression": "1.7.4",
    "cookie-parser": "1.4.6",
    "cors": "2.8.5",
    "express": "4.18.2",
    "express-cache-controller": "1.1.0",
    "express-correlation-id": "2.0.1",
    "express-rate-limit": "6.7.0",
    "express-validator": "7.0.1",
    "google-auth-library": "8.0.0",
    "helmet": "6.0.1",
    "http-errors": "2.0.0",
    "http-status-codes": "2.2.0",
    "ioredis": "5.3.0",
    "joi": "^17.0.0",
    "jsonwebtoken": "9.0.0",
    "lodash": "4.17.21",
    "morgan": "1.10.0",
    "node-cache": "^5.1.2",
    "opossum": "6.4.0",
    "passport": "0.6.0",
    "passport-google-oauth20": "2.0.0",
    "pino": "8.11.0",
    "prom-client": "14.2.0",
    "rate-limit-redis": "3.0.0",
    "rate-limiter-flexible": "2.4.1",
    "redis": "4.6.5",
    "uuid": "^8.3.2",
    "validator": "13.9.0",
    "winston": "3.8.2",
    "winston-daily-rotate-file": "4.7.1",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@jest/types": "^29.0.0",
    "@types/compression": "1.7.2",
    "@types/cors": "2.8.13",
    "@types/express": "4.17.17",
    "@types/http-errors": "2.0.1",
    "@types/jest": "29.5.0",
    "@types/jsonwebtoken": "9.0.2",
    "@types/node": "18.16.0",
    "@typescript-eslint/eslint-plugin": "5.57.1",
    "@typescript-eslint/parser": "5.57.1",
    "eslint": "8.39.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-jest": "^27.2.1",
    "husky": "8.0.3",
    "jest": "29.5.0",
    "nodemon": "2.0.22",
    "openapi-types": "^12.1.0",
    "openapi3-ts": "^4.1.2",
    "prettier": "2.8.8",
    "prisma": "4.12.0",
    "ts-jest": "29.1.0",
    "ts-node": "10.9.1",
    "typescript": "4.9.5"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}